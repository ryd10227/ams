
/* Noto font */

@font-face {
	font-family:"Noto Sans";
    font-style: normal;
    font-weight: 300;
	src: local("Noto Sans"), url("/public/fonts/NotoSans-Light.ttf") format("truetype");
}

@font-face {
	font-family: "Noto Sans";
	font-style: normal;
	font-weight: normal;
	src: local("Noto Sans"), local("Noto-Sans-Regular"), url("/public/fonts/NotoSans-Regular.ttf") format("truetype");
}

@font-face {
	font-family: "Noto Sans";
	font-style: normal;
	font-weight: 500;
	src: local("Noto Sans"), local("Noto-Sans-Medium"), url("/public/fonts/NotoSans-Medium.ttf") format("truetype");
}

@font-face {
	font-family: "Noto Sans";
	font-style: normal;
	font-weight: 700;
	src: local("Noto Sans Bold"), local("Noto-Sans-Bold"), url("/public/fonts/NotoSans-Bold.ttf") format("truetype");
}

/* noto sans cjk kr */
@font-face {
	font-family:"Noto Sans KR";	font-weight: normal;	font-style: normal;
	src: local("Noto Sans CJK KR"), url("/public/fonts/NotoSansKR-Regular.otf") format("opentype"),
	url("/public/fonts/NotoSansKR-Regular.woff") format("woff"), url("/public/fonts/NotoSansKR-Regular.woff2") format("woff2");
}
@font-face {
	font-family:"Noto Sans KR";	font-weight: 500;	font-style: normal;
	src: local("Noto Sans CJK KR Medium"), url("/public/fonts/NotoSansKR-Medium.otf") format("opentype"),
	url("/public/fonts/NotoSansKR-Medium.woff2") format("woff2");
}
@font-face {
	font-family:"Noto Sans KR";	font-weight: bold;	font-style: normal;
	src: local("Noto Sans CJK KR Bold"), url("/public/fonts/NotoSansKR-Bold.woff") format("woff"),
	url("/public/fonts/NotoSansKR-Bold.woff2") format("woff2");
}

:root {
    --ion-default-font: "Noto Sans", "Noto Sans KR", sans-serif;

    /** primary **/
  --ion-color-primary: #0072C6 !important;
  --ion-color-primary-rgb: 45, 86, 234;
  --ion-color-primary-contrast: #ffffff;
  --ion-color-primary-contrast-rgb: 255, 255, 255;
  --ion-color-primary-shade: #3171e0;
  --ion-color-primary-tint: #4c8dff;



    --color: #000;
    --normal: #000;
    --primary: #FF721C;
    --secondary: #4568E3;
    --light: #83888E;
}


html {--ion-default-font: "Noto Sans", "Noto Sans KR", sans-serif !important; font-weight: 500; color: var(--normal); background-color: #F2F4F7 !important;}
body {color: var(--normal);}
em {font-style: normal;}
#app { background-color: #F2F4F7;}
img { border:none;}
p, ul, li, ol, h1, h2, h3, h4, h5, h6, dl, dt, dd, em, figure { margin:0; padding:0;}
p {margin: 7px 0; font-size: .9375rem;}
h1, h2, h3, h4, h5, h6 { font-weight:900; font-size:1rem;}
li {margin-top: 7px; font-size: .9375rem; list-style:none;}
fieldset { margin:0; padding:0; border:none;}
legend { position:absolute; left:-1000px; top:-1000px; height:0; font-size:0; line-height:0; visibility:hidden;}
a { margin:0; color:#231f20; text-decoration:none; outline:none; cursor:pointer;}
table { width:100%; border-collapse:collapse; font-size:1em;}
table caption { display:none;position:absolute; left:-999px; height:0; font-size:0; line-height:0; visibility:hidden; overflow:hidden;}
table td, table th { padding:0;}
button { margin:0; padding:0; font:normal 1em "Noto Sans", "Noto Sans KR", "Roboto", sans-serif !important; color:#231f20; vertical-align:middle; background:0; border:none; overflow:visible; cursor:pointer;}
button:focus { outline:none; -webkit-tap-highlight-color:rgba(0,0,0,0.2);}

/******** common class ********/
.hide { position:absolute !important; left:-10000px; top:-10000px; visibility:hidden;}
.none { display:none !important;}


/***** layout *****/
.header-md::after {display: none;}
ion-header ion-title {font-weight: bold; font-size: 1.125rem; color: #000; text-align: center;}
ion-header ion-toolbar ion-buttons {margin-left: 0;}
ion-back-button {position: relative; min-width: 64px; height: 56px; text-indent: -999em; overflow: hidden;}
ion-back-button::part(icon) {text-indent: -999em; background: url("../images/btn_head_back.svg") no-repeat center center;}

ion-header ion-toolbar ion-buttons + ion-title {padding: 0;}
ion-header ion-toolbar ion-buttons + ion-title:last-child {padding-right: 64px;}

ion-content {font-weight: 500; --background: #F2F4F7 !important;}
ion-content.bg_w { --background: #ffffff !important;}

ion-content {--padding-start: 15px; --padding-top: 20px; --padding-end: 15px; --padding-bottom: 20px; padding: 28px 20px 0; font-weight: 500;}

.footer-ios ion-toolbar:first-child { --border-width:0;}
.footer-md:before { display:none;}
ion-footer ion-toolbar { --min-height:50px; --padding-top:20px; --padding-start:20px; --padding-end:20px; --padding-bottom:20px; padding-bottom: 0 !important;}
ion-footer ion-toolbar ion-button { position: relative; width: 100%; height: 44px !important; margin: 0;}
ion-footer ion-toolbar.wrap_2_btn { display: flex;
    ion-button { width: 50%;}
    ion-button:first-child { --border-radius: 4px 0 0 4px;}
    ion-button:last-child { --border-radius: 0 4px 4px 0;}
    ion-button:last-child:before { position: absolute; left: 0.5px; top: 16px; height: 12px; width: 1px; background: #565656; content: ""; z-index: 9999;}
    ion-button.btn02:before { display: none;}

}


#container {padding: 30px 20px;}

.page_tit {margin: 0 0 20px 10px; font-weight: bold; font-size: 1.125rem;}

ion-button {height: 40px;}
ion-button.button-block + ion-button.button-block {margin-top: 10px;}
ion-list {background: #E9ECF3 !important; border-radius: 10px;
    ion-item:last-child {--inner-border-width: 0;}
}
ion-item {font-weight: 500; --background: #E9ECF3; --detail-icon-font-size: .9375rem; --detail-icon-color: #868A91;
    &::part(detail-icon) {background-color: #fff; border: 2px solid #fff; border-radius: 20px; opacity: 1;
    }
}

ion-card {margin: 15px 0; background-color: #E9ECF3; border-radius: 10px; box-shadow: none;
    &:first-child {margin-top: 0;}
    ion-card-title {font-weight: bold; font-size: 1rem;}
    ion-card-content {font-size: .875rem; color: #222;
        .code_box01 {margin: 10px -5px;
            &:first-child {margin-top: 0;}
            &:last-child {margin-bottom: 0;}
        }
    }
}
.code_box01, pre {margin: 0; padding: 15px; font-family: var(--ion-default-font) !important; font-size: .875rem !important; text-align: left; background-color: #fff; border-radius: 5px; overflow: auto;
    &::-webkit-scrollbar {width: 7px; height: 7px; -webkit-appearance: none;}
    &::-webkit-scrollbar-track {background: rgba(117, 124, 138, 0.1); border-radius: 10px;}
    &::-webkit-scrollbar-thumb {background: rgba(117, 124, 138, 0.4); border-radius: 10px;}
}

.subTitle {margin: 25px 0 15px; font-weight: bold; font-size: 1rem;
    &:first-child {margin-top: 0;}
}

// Arguments Table
.arg_table{color: rgb(0, 0, 0);font-family: Helvetica;font-size: medium; line-height: normal;
    th{border:1px solid rgb(188, 188, 188);text-align:center;color:#ffffff;line-height:25px;background:rgb(59, 144, 255);}
    tbody{
        tr{height:16.5pt;}
        td{border: 1px solid rgb(188, 188, 188);font-size: 10pt;vertical-align: middle;text-align: center;            
            &.text_start{text-align: start;}
            span.type{display: inline-block;margin: 2px 0px;padding: 1px 8px;font-weight: 800;border-radius: 3px;color: rgb(255, 255, 255);
                &.function{background: rgb(0, 176, 80);}
                &.string{background: rgb(58, 135, 173)}
                &.boolean{background: rgb(18, 131, 39);}
                &.object{background: rgb(120, 120, 120);}
                &.array{background: rgb(250, 207, 0); color: #000;}
                &.number{background: rgb(202, 51, 0);}
                &.any{background: rgb(120, 120, 120);}
            }
        }
        *{font-size: 10pt !important;}
        .padding_left{padding-left: 15px;}
    }
}